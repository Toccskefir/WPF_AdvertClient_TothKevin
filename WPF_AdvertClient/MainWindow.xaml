<Window x:Class="WPF_AdvertClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_AdvertClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <Button x:Name="buttonAdd" Content="Hirdetés feladás" Width="150" Margin="10" Click="buttonAdd_Click"/>
                <Button x:Name="buttonDelete" Content="Hirdetés törlés" Width="150" Margin="10" Click="buttonDelete_Click"/>
                <Button x:Name="buttonEdit" Content="Hirdetés szerkesztés" Width="150" Margin="10" Click="buttonEdit_Click"/>
            </StackPanel>
            <DataGrid x:Name="dataGridAdvert" IsReadOnly="True"/>
        </DockPanel>
    </Grid>
</Window>
